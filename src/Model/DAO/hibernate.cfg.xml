<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
 <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
 <property name="hibernate.connection.driver_class">net.sourceforge.jtds.jdbc.Driver</property>
 <property name="hibernate.connection.url">jdbc:jtds:sqlserver://PAULO-PC\SQLEXPRESS</property>
 <property name="hibernate.connection.username">VIENA</property>
 <property name="hibernate.connection.password">VEX@2000</property>
 <property name="current_session_context_class">thread</property>
 <!--Configuração de debug-->
 <property name="show_sql">true</property>
 <property name="format_sql">true</property>
 <!--Usando as Configurações do C3PO para pool de conexão-->
 <property name="connection.pool_size">10</property>
 <property name="c3po.min_size">5</property>
 <property name="c3po.max_size">20</property>
 <property name="c3po.timeout">300</property>
 <property name="c3po.max_statements">50</property>
 <property name="c3po.idle_test_period">3000</property>
 <!-- Mapping files -->
 <mapping class="modelo.Produto"/>
 </session-factory>
</hibernate-configuration>